<body>
    <script>
        function drawTree(height) {
            for (let i = 0; i < height; i++) {
                let spaces = ' '.repeat(height - i - 1);
                let stars = '*'.repeat(2 * i + 1);
                console.log(spaces + stars);
            }
            
            let trunk = ' '.repeat(height - 1) + '*';
            console.log(trunk);
            console.log(trunk);
        }

        drawTree(5); 
    </script>
</body>
